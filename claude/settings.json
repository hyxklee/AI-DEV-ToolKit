{
  "permissions": {
    "allow": [
      "Read(*)",
      "Bash(./gradlew:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(grep:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(echo:*)",
      "Bash(gh:*)",
      "Grep(*)",
      "Glob(*)",
      "WebFetch(domain:code.claude.com)",
      "WebFetch(domain:github.com)"
    ],
    "ask": [
      "Write(*)",
      "Edit(*)",
      "Bash(git:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(git:push --force*)",
      "Bash(git:reset --hard*)"
    ]
  },
  "classifierPermissionsEnabled": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$TOOL_INPUT\" == *.kt ]]; then ./gradlew ktlintFormat --quiet 2>/dev/null || true; fi",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"Branch: $(git branch --show-current 2>/dev/null || echo 'N/A')\nRecent commits:\n$(git log --oneline -3 2>/dev/null || echo 'No commits')\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR/.claude/hooks/validate-command.sh\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
